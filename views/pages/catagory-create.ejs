<section>
  <h2>Create Catagory</h2>
  <hr />
  <form action="/catagories/create" method="post" enctype="multipart/form-data">
    <div class="row mb-3">
      <label for="name" class="col-sm-2 col-form-label">Name</label>
      <div class="col-sm-10">
        <input
          type="text"
          class="form-control"
          id="name"
          name="name"
          required
        />
      </div>
    </div>
    <div class="row mb-3">
      <label for="image" class="col-sm-2 col-form-label">Image</label>
      <div class="col-sm-10">
        <input class="form-control" type="file" id="image" name="image" />
      </div>
    </div>
    <div class="row mb-3">
      <label for="description" class="col-sm-2 col-form-label"
        >Description</label
      >
      <div class="col-sm-10">
        <textarea
          class="form-control"
          id="description"
          name="description"
        ></textarea>
      </div>
    </div>
    <button type="submit" class="btn btn-secondary">Create</button>
  </form>
</section>
