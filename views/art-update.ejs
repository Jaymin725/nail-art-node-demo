<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head') -%>
  <body>
    <%- include('partials/header') -%>
    <main>
      <section>
        <h2>Update Art</h2>
        <form action="/arts/update/<%= art.id %>" method="post" enctype="multipart/form-data">
          <div>
            <label for="title">Title:</label>
            <input
              type="text"
              id="title"
              name="title"
              value="<%= art.title %>"
              required
            />
          </div>
          <div>
            <label for="catagory">Catagory:</label>
            <select name="catagory_id" id="catagory">
              <% catagories.forEach(({ id, name }) => { %>
              <option value="<%= id %>" <%= (art.catagory_id === id) && "selected" %>><%= name %></option>
              <% }); %>
            </select>
          </div>
          <div>
            <label for="image">Image:</label>
            <input type="file" id="image" name="image" />
          </div>
          <div>
            <button type="submit">Update</button>
          </div>
        </form>
      </section>
    </main>
  </body>
</html>
